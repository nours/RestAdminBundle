namespace Nours\RestAdminBundle\Tests\Api;
use Nours\RestAdminBundle\Api\KernelProvider;
use Nours\RestAdminBundle\Tests\AdminTestCase;


/**
 * Class KernelProviderTest
 * 
 * @author David Coudrier <david.coudrier@gmail.com>
 */
class KernelProviderTest extends AdminTestCase
{
    /**
     * @var KernelProvider
     */
    private $provider;

    public function setUp()
    {
        $this->provider = $this->get('rest_admin.kernel_provider');
    }

    public function testViewKernelIsRegistered()
    {
        $kernel = $this->provider->getKernel('view');
        $this->assertInstanceOf('Nours\RestAdminBundle\Api\ViewKernel', $kernel);
    }

}